<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cuonghx2709.calculator.MainActivity"
    android:orientation="vertical"
    android:weightSum="6"

    android:background="#747373">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="60dp"
        android:gravity="right" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_del"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="c"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_change"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="+/_"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_percent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="%"/>
        <RelativeLayout
            android:background="@drawable/layout_bg"
            android:id="@+id/rl_division"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="30dp"
                android:text="/"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="7"/>
        <Button

            android:background="@drawable/layout_bg"
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="8"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="9"/>
        <RelativeLayout
            android:background="@drawable/layout_bg"
            android:id="@+id/rl_x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="30dp"
                android:text="x"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="4"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="5"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="6"/>
        <RelativeLayout
            android:background="@drawable/layout_bg"
            android:id="@+id/rl_subtract"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="50dp"
                android:text="-"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="1"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="2"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="3"/>
        <RelativeLayout
            android:background="@drawable/layout_bg"
            android:id="@+id/rl_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="30dp"
                android:text="+"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_0"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="0"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="off"/>
        <Button
            android:background="@drawable/layout_bg"
            android:id="@+id/bt_final"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_height="match_parent"
            android:text="="/>
    </LinearLayout>

</LinearLayout>
